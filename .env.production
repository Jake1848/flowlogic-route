# FlowLogic RouteAI - Production Environment Configuration
# Copy this file and customize for your domain deployment

# ==============================================================================
# DOMAIN CONFIGURATION
# ==============================================================================

# Your custom domain name
DOMAIN_NAME=flowlogicroute.com
SITE_NAME=FlowLogic Route

# Frontend API URL
FRONTEND_API_URL=https://api.flowlogicroute.com

# SSL Certificate Email (for Let's Encrypt)
ACME_EMAIL=admin@flowlogicroute.com

# ==============================================================================
# MAPBOX CONFIGURATION
# ==============================================================================

# Get your Mapbox token from: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL Database (use strong passwords in production)
POSTGRES_DB=flowlogic
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_super_secure_password_here
POSTGRES_PORT=5432

# Database URLs
DATABASE_URL=postgresql://postgres:your_super_secure_password_here@postgres:5432/flowlogic
ASYNC_DATABASE_URL=postgresql+asyncpg://postgres:your_super_secure_password_here@postgres:5432/flowlogic

# ==============================================================================
# REDIS CONFIGURATION  
# ==============================================================================

REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================

# JWT Secret (generate a secure random string)
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Rate Limits (requests per minute)
RATE_LIMIT_FREE=60
RATE_LIMIT_STARTER=300
RATE_LIMIT_PROFESSIONAL=1000
RATE_LIMIT_ENTERPRISE=5000

# ==============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# ==============================================================================

# OpenAI API for natural language processing
OPENAI_API_KEY=sk-your_openai_api_key

# GraphHopper API for enhanced routing
GRAPHHOPPER_API_KEY=your_graphhopper_api_key

# ==============================================================================
# STRIPE BILLING (OPTIONAL - FOR SAAS)
# ==============================================================================

# Stripe API Keys
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs
STRIPE_PRICE_STARTER=price_stripe_starter_id
STRIPE_PRICE_PROFESSIONAL=price_stripe_professional_id
STRIPE_PRICE_ENTERPRISE=price_stripe_enterprise_id

# ==============================================================================
# FIREBASE AUTH (OPTIONAL - FOR SAAS)
# ==============================================================================

# Firebase Service Account JSON
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project"}

# ==============================================================================
# MONITORING & LOGGING
# ==============================================================================

LOG_LEVEL=INFO
ENVIRONMENT=production

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your_sentry_dsn

# ==============================================================================
# BACKUP CONFIGURATION
# ==============================================================================

BACKUP_RETENTION_DAYS=30

# S3 backup (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BACKUP_BUCKET=yourdomain-backups

# ==============================================================================
# ADMIN CONFIGURATION
# ==============================================================================

CREATE_ADMIN=true
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_FIREBASE_UID=your_firebase_uid

# ==============================================================================
# DOCKER RESOURCE LIMITS
# ==============================================================================

API_MEMORY_LIMIT=2g
POSTGRES_MEMORY_LIMIT=4g
REDIS_MEMORY_LIMIT=1g

# ==============================================================================
# ROUTING CONFIGURATION
# ==============================================================================

MAX_STOPS_PER_TRUCK=100
DEFAULT_SERVICE_TIME_MINUTES=15